<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_page_item_image"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_margin="5dp"/>

        <RelativeLayout
            android:id="@+id/section_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/fragment_page_item_image"
            android:layout_marginBottom="3dp">
            <TextView
                android:id="@+id/fragment_page_item_section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="titre ici"
                android:padding="5dp"
                android:textStyle="bold"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/fragment_page_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date ici"
                android:layout_alignParentRight="true"
                android:padding="5dp"
                android:textSize="10sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/section_date"
            android:layout_toRightOf="@+id/fragment_page_item_image">
            <TextView
                android:id="@+id/fragment_page_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="titre ici"
                android:padding="5dp"
                android:textSize="13sp"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>